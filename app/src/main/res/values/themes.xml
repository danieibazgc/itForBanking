<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Interbank" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Splash Screen Theme -->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- Set splash screen background color -->
        <item name="windowSplashScreenBackground">@android:color/white</item>
        <!-- Set splash screen icon -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/ibk</item>
        <!-- Icon size -->
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <!-- Post splash screen theme -->
        <item name="postSplashScreenTheme">@style/Theme.Interbank</item>
    </style>
</resources>